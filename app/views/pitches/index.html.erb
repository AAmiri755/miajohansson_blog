<div class="skinny_wrapper wrapper_padding">
  <h1>Pitches</h1>
  <div class="flex-wrapper">
    <% @pitches.each do |pitch| %>
      <div class="card" style="width: 32%;">
        <%=image_tag(pitch.thumbnail.url(:card), alt: pitch.title, :class => "card-img-top")%>
        <% if current_user.admin? || current_user.editor? %>
          <%= link_to("Edit", edit_pitch_path(pitch.id), :class => "edit_btn pitch_btn")%>
        <% end %>
        <div class="card-body">
          <h4 class="card-title pitch_ttl"><%= pitch.title %></h4>
          <p class="card-text"> <%= pitch.description.truncate_words(20) %></p>
          <%= link_to "Claim", pitch, :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
