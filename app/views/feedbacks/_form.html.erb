<%= form_for @feedback do |f| %>
  <%= f.label "In under 10 words, describe the main type of problem." %>
  <%= f.text_field :editor_descr %>

  <%= f.label "Give a more detailed explanation of the problem as well as resources and suggestions for improving." %>
  <%= f.text_area :review_descr %>
  <br><br>
  <% if @feedback.id.nil? %>
    <%= f.submit "Add feedback field" %>
  <% else %>
    <%= f.submit "Save Changes" %>
  <% end %>
<% end %>
