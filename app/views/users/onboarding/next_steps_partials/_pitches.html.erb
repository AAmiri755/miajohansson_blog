<div class="flex-wrapper" style="margin: 0 auto 40px auto;">
  <% pitches.each do |pitch| %>
    <%= link_to pitch_modal_path(:id => pitch.id), method: :patch, remote: true, class: "card", style: "width: 32%;", id: "pitch-#{pitch.id}" do %>
      <i style="color: #F0255E;" class="fas fa-check-circle fa-2x abs-right-corner hide"></i>
      <div>
        <%=image_tag(pitch.thumbnail.url(:card), alt: pitch.title, :class => "card-img-top")%>
        <div class="card-body">
          <h4 style="color: black;" class="pitch_ttl mt-0"><%= pitch.title %></h4>
          <p class="card-text"><%= pitch.description.truncate_words(20) %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="mt-3 will_paginate_container">
  <%= will_paginate @pitches, :params => { :controller => "users", :action => "onboarding", :step => "next_steps" } %>
</div>
