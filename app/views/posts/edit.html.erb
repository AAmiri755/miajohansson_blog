<% @most_recent_review = @post.reviews.where.not(status: "In Progress").last %>
<% @review_banner_soft = @post.reviews.where.not(status: nil).last %>
<style>.banner_stts {position: relative}</style>
<% if !@most_recent_review.nil? && !(@review_banner_soft.status.eql? "In Progress") %>
  <%= render '/posts/banner_status' %>
<% elsif @post.pitch.present? %>
  <p class= "banner_stts">In Progress | Review this draft's pitch <%= link_to("here", @post.pitch, target: "_blank", class: "link_white") %></p>
<% else %>
  <p class="banner_stts">In Progress</p>
<% end %>
<div class="skinny_wrapper wrapper_padding">
  <% @reviews = @post.reviews.where(status: "Rejected") %>
  <p style="margin-bottom: 0;"><i>This article has been given feedback <%= @reviews.count %> time(s).
     View all past reviews <%= link_to("here", reviews_path(post: @post), target: "_blank", :class => "link_nrml underline") %>.
  </i></p>
  <% if (@reviews.count >= 5) && !(@post.is_published?) %>
    <p style="margin-bottom: 0px; font-style: italic;">You have reached the maximum amount of times you can submit this article for review.</p>
  <% end %>
  <% if @most_recent_review.try(:status).eql? "Rejected" %>
    <% if !@most_recent_review.notes.blank? %>
     <p><i style="background-color: yellow;">Editor Notes: <%= @most_recent_review.notes %></i></p>
    <% end %>
    <% if @requested_changes.present? %>
      <div class="card mb-3 changes_requested">
        <div class="card-header">Review #<%= @reviews.count %>: The below problems prevented this article from being published.</div>
        <div class="card-body">
          <% @requested_changes.each do |requested_change| %>
            <% @feedback = Feedback.find(requested_change.feedback_id) %>
            <h5 class="card-title">âœŽ <%= @feedback.try(:editor_descr) %></h5>
            <p class="card-text"><%= @feedback.try(:review_descr) %></p>
          <% end %>
        </div>
       </div>
       <p><i>Please make the above changes before submitting your article again.</i></p>
    <% end %>
  <% end %>
  <%= render 'form' %>
</div>
<br>
