<link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">

<style>
 .div {
   height: 200px;
   width: 100%;
   overflow: hidden;
   z-index: 0;
   position: absolute;
}

.post_image {
   background-image: url(
     <% if @post.image != "" && @post.image != nil %>
      <%= @post.image %>
     <% else %>
      <%= @post.thumbnail %>
     <% end %>);
   height: 220px;
    position: absolute;
   background-position: center;
   width: 105%;
   margin-left: -10px;
   margin-top: -10px;
   background-size: cover;
   position: absolute;
   -webkit-filter: blur(2px);
   z-index: 0;
   -moz-filter: blur(2px);
   -o-filter: blur(2px);
   -ms-filter: blur(2px);
   filter: blur(2px);
}
</style>

<div class="div">
  <div class="post_image">
  </div>
</div>

<div class="flex_wrapper_posts">
<div class="skinny wrapper_padding" id="post_show_content">

  <header id="post_title_show">
    <h1><%= @post.title %></h1>
    <p class="date"><%= @post.created_at.strftime('%A, %B %d')%></p>
  </header>
  <div id="content">
    <div class="post_content">
      <%= markdown @post.content %>
    </div>
  <hr>

  <div id="mc_embed_signup" style="width: 100%; margin-top: 20px; margin-left: 0px;">
  <form action="//herokuapp.us14.list-manage.com/subscribe/post?u=5c2a24e15a906f29e2c6a9b72&amp;id=3081d2e76a" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" style="padding-left: 0;" novalidate>
      <div id="mc_embed_signup_scroll">
    <h2>Is this your first time here?</h2>
  <div class="mc-field-group">
    <label for="mce-EMAIL">Email Address </label>
    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
  </div>
    <div id="mce-responses" class="clear">
      <div class="response" id="mce-error-response" style="display:none"></div>
      <div class="response" id="mce-success-response" style="display:none"></div>
    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_5c2a24e15a906f29e2c6a9b72_3081d2e76a" tabindex="-1" value=""></div>
      <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
      </div>
  </form>
  </div>

  <% if current_user && (current_user.id == @post.user_id || current_user.admin?) %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
    </div>
  <% end %>


  <div id="share_box">
    <p>Share "<%= @post.title %>"</p>
    <a onclick="javascript:window.open('http://twitter.com/share?text= Read this! <%= @post.title %> by @johanssonmia09 - &amp;<%= url_for([@post, {only_path:false}]) %>',
      '_blank', 'width=800, height=500, top=200, left=300');void(0)">
      <i class="fa fa-twitter"></i></i>
    </a>
    <a onclick="javascript:window.open('http://facebook.com/sharer/sharer.php?u=',
      '_blank', 'width=800, height=500, top=200, left=300');void(0)">
      <i class="fa fa-facebook"></i></i>
    </a>
    <a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {only_path:false}]) %> &amp;text=Read this! <%= @post.title %> by <% @post.user.first_name %> <% @post.user.last_name %> on The Teen Magazine - <%= request.original_url %>',
      '_blank', 'width=800, height=500, top=200, left=300');void(0)">
      <i class="fa fa-google-plus"></i></i>
    </a>
  </div>
  <hr>

  <%= render :partial => 'users/profile' %>

  <br>
  <br>
</div>

  <div style="background-color: black;" class="comment_ad">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- above comments -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:728px;height:90px"
         data-ad-client="ca-pub-4986861624955300"
         data-ad-slot="6491117672"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>

  <div id="disqus_thread"></div>
  <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
  <script>

  (function() { // DON'T EDIT BELOW THIS LINE
  var d = document, s = d.createElement('script');
  s.src = 'https://the-teen-magazine.disqus.com/embed.js';
  s.setAttribute('data-timestamp', +new Date());
  (d.head || d.body).appendChild(s);
  })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

</div>
<div class="post_apply">
  <div class="sticky">
    <a href="/applies/new"><img id="apply_image" src="http://i.imgur.com/3M0jhbo.jpg" /></a>
    <div class="articles">
      <div class="flex_other_articles">
      <% if @user_posts_approved.count > 1 %>
      <h3 class="title">More by <%= @post.user.first_name %> <%= @post.user.last_name %></h3>
      <div class="contain_articles">
        <% @user_posts_approved.each do |post| %>
          <% if post.title != @post.title %>
            <div class="one_article">
                <% if post.image != "" && post.image != nil %>
                 <%= link_to(image_tag(post.image), post) %>
                <% else %>
                 <%= link_to(image_tag(post.thumbnail.url(:square)), post) %>
                <% end %>
                <div class="paragraph">
                  <p><%= link_to(post.title, post) %></p>
                </div>
             </div>
          <% end %>
          <% end %>
      </div>
      <% else %>
      <% @num = 1 %>
      <h3 class="title">More in <%= @post.meta_title %></h3>
      <div class="contain_articles">
        <% @posts.each do |post| %>
          <% if (post.meta_title == @post.meta_title) && (post.title != @post.title) && (@num <= 4) %>
            <div class="one_article">
              <% if post.image != "" && post.image != nil %>
               <%= link_to(image_tag(post.image), post) %>
              <% else %>
               <%= link_to(image_tag(post.thumbnail.url(:square)), post) %>
              <% end %>
              <div class="paragraph">
                <p><%= link_to(post.title, post) %></p>
              </div>
            </div>
            <% @num = @num + 1 %>
        <% end %>
      <% end %>
      </div>
    <% end %>
    </div>
    </div>
  </div>
</div>
</div>
<script>
jQuery(document).ready(function(){
  var navOffset = jQuery(".sticky").offset().top;
  jQuery(window).scroll(function() {
    var scrollPos = jQuery(window).scrollTop();
    if (scrollPos >= navOffset) {
      jQuery(".sticky").addClass("fixed");
    } else {
      jQuery(".sticky").removeClass("fixed");
    }
  });
});
</script>
