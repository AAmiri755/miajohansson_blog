<h1 id="page_title">Apply to Become a Journalist for the Teen Magazine!</h1>
<div class="form_wrapper wrapper_padding">
  <%= form_for @application do |f| %>
    <span>First Name</span>
    <%= f.text_field :first_name, required: true %>
    <br />
    <span>Last Name</span>
    <%= f.text_field :last_name, required: true %>
    <br />
    <span>Email</span>
    <%= f.email_field :email, required: true %>
    <br />
    <span>Primary Category</span><br /><br />
    <%= f.select :category, ['Academics', 'Get Involved', 'Health & Fitness', 'News', 'Lifestyle', 'Beauty', 'Fashion', 'Entertainment', 'Tips & Hacks', 'DIY']%><br />
    <br />
    <br />
    <span>Please write a cover letter describing your experience as a writer and how you would contribute to The Teen Magazine's writer community.</span>
    <%= f.text_area :description, required: true %>
    <br />
    <div class="hidden">
      <%= f.label :nickname %> <br />
      <%= f.text_field :nickname %>
    </div>

    <%# <%= f.hidden_field :password, value: [*('A'..'Z'),*('0'..'9')].shuffle[0,8].join %>

    <span>Applications are accepted on a rolling basis. If accepted, you will recieve an email from our team of editors within 48 hours.</span>
    <br /><br />
    <%= f.submit 'Submit Application', class: 'button' %>
  <% end %>
  <br>
  <br>
</div>
