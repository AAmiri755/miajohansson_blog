<!-- shows all accepted applications -->

<div class="skinny_wrapper">
    <h1 id="page_title">Writer Applications</h1>
    <% @applies.each do | application | %>
      <% @user = User.where(email: application.email.downcase).first %>
        <% if @user.nil? %>
          <div class="card mb-3 <% if @unseen_applications.include? application %> unread <% end %>">
            <div class="card-body">
              <h5 class="card-title"><%= link_to ("#{application.first_name} #{application.last_name}"), application, :style => "color: #4ABEB6;" %></h5>
              <p class="card-text"><small class="text-muted">Submitted <%= application.created_at.strftime("%D") %></small></p>
              <p class="card-text"><%= application.description %></p>
            </div>
          </div>
        <% end %>
    <% end %>
    <%= will_paginate @applies %>
    <br>
  </div>
